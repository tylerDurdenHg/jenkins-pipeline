pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    environment {
        MY_HI= "HELLO"
    }
    
    stages {
    /*
    	 stage('Example') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                }
            }
            steps {
                echo "Hello, ${PERSON}, nice to meet you."
            }
        }
        */
    
        stage('Preparation') {
        	steps {
	       		sh 'echo Hi its me'
           		sh 'echo $MY_HI'
	        }
        }
        stage('Compile') {
        	steps {
	            sh 'mvn -f mypipe/pom.xml compile'
	        }
        }
       stage('Test') {
        	steps {
	            sh 'mvn -f mypipe/pom.xml test'
	        }
        }
        
    }
}